@model passionP.Models.ViewModels.DetailsBrand


@{
    ViewBag.Title = "View";
}



<nav>
    <ul style="margin-top: 5px;">

        <div><button type="button" class="btn btn-primary"><a style="color:white;" href="/Brand/List">Go Back To List</a></button></div>
        <br />

        <div><button type="button" class="btn btn-success"><a style="color:white;" href="/Brand/Edit/@Model.SelectedBrand.BrandID">Update</a></button></div>
        <br />

        <div><button type="button" class="btn btn-danger"><a style="color:white;" href="/Brand/DeleteConfirm/@Model.SelectedBrand.BrandID">Delete</a></button></div>
    </ul>
</nav>






<h2>Name:  @Model.SelectedBrand.BrandName</h2>
<h2>ID: @Model.SelectedBrand.BrandID</h2>



<div style="margin-top:100px;">
    <h3>Products related to this brand</h3>
    @foreach (var product in Model.RelatedProducts)
    {
        <a href="/Product/Details/@product.ProductID">@product.ProductName</a>
        
        if (@product.Discontinued)
        {
            <span> Discontinued</span>
        }
        <br />


    }
</div>