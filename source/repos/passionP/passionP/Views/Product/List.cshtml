@model IEnumerable<passionP.Models.ProductDto>



@{
    ViewBag.Title = "List";
}

<h2>List of Products</h2>

<a href="/Product/New">New Product</a>

<div>
    <h2>Search product by name:</h2>
    <form action="/Product/List" method="GET">
        <input type="text" name="SearchKey" />
        <input type="submit" value="Search" />
    </form>

</div>


<div class="row">

    @foreach (var product in Model)
    {

        <div style="border-top:solid black 1px;" class="col-lg-4 col-md-6 col-sm-12">
            <h2><a href="/Product/Details/@product.ProductID">@product.ProductName</a></h2>
            @{
                string imageurl = "/Content/Images/Products/default.jpg";
                if (product.ProductHasPic)
                {
                    imageurl = "/Content/Images/Products/" + product.ProductID + "." + product.PicExtension;
                }
            }
            <div><img style="height:160px; margin-left:auto; margin-right:auto;" alt="@product.ProductName" src="@imageurl" /></div>
            <div>ID: @product.ProductID</div>
            <div>Brand: @product.BrandName</div>


        </div>
    }

</div>

